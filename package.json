{
  "name": "bulk-feedback-generator",
  "version": "1.0.0",
  "description": "A tool to help teachers provide high-quality, personalized feedback on student assignments at scale",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "npm run build:client",
    "build:client": "vite build",
    "preview": "vite preview",
    "test": "node tests/run-tests.js",
    "test:unit": "node tests/run-tests.js --unit",
    "test:integration": "node tests/run-tests.js --integration",
    "test:compare": "mocha tests/compareFeedback.test.js --timeout 10000 --exit",
    "test:compare-extreme": "mocha tests/compareExtremeEssays.test.js --timeout 15000 --exit",
    "test:coverage": "c8 --all --include='src/**/*.js' --reporter=text --reporter=html node --experimental-vm-modules tests/run-tests.js",
    "test:coverage:ci": "c8 --all --include='src/**/*.js' --reporter=lcov node --experimental-vm-modules tests/run-tests.js"
  },
  "dependencies": {
    "compromise": "^14.10.0",
    "cors": "^2.8.5",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "natural": "^6.10.4",
    "path": "^0.12.7",
    "pdf-parse": "1.1.1",
    "sentiment": "^5.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "c8": "^10.1.3",
    "chai": "^6.0.1",
    "mocha": "^11.7.2",
    "nodemon": "^3.0.2",
    "vite": "^5.0.0"
  },
  "keywords": [
    "education",
    "feedback",
    "grading",
    "teaching",
    "assessment",
    "bulk-processing"
  ],
  "author": "TeachBetter Team",
  "license": "MIT"
}
